#!/usr/bin/python

array = ['-a(--all)','-A(--almost-all)','--author','-b(--escape)','-B(--ignore-backups)','-C','-D(--dired)','-f','-F(--classify)','-g','-G(--no-group)','-h(--human-readable)','--si','-H(--dereference-command-line)','-i(--inode)','-k','-l','-L(--dereference)','-m','-n(--numeric-uid-gid)','-N(--literal)','-o','-p','-q(--hide-control-chars)','-Q(--quote-name)','-r(--reverse)','-R(--recursive)','-s(--size)','-S','-t','-T','-u','-U','-v','-w','-x','-X','-Z(--context)','-1', '--help', '--version']

import sys
from PyQt4.QtGui import *
from PyQt4.QtCore import *
from subprocess import call

class Window(QWidget):
    def __init__(self):
        QWidget.__init__(self)
	
	self.button = QPushButton('just ls execute', self)
	self.button.clicked.connect(self.execute)
        
	layout = QVBoxLayout()
	layout.addWidget(self.button)
        checks = []
        for i in xrange(30):
            c = QCheckBox(array[i])
            layout.addWidget(c)
            checks.append(c)
   	    c.stateChanged.connect(self.execute)
	self.setLayout(layout)
    
    def execute(self, state):
	    if state == Qt.Unchecked:
		call(["ls"])
	    else:
		call(["ls", "--all"]) #add selected element.

if __name__ == '__main__':
    app = QApplication(sys.argv)

    w = Window()
    w.resize(400, 600)
    w.show()

    app.exec_()


